


<div class="container">
	<div class="row">
		 <div class="col-xs-3">
<%= render 'users/mypage&post', {user: current_user,users: @users,book: @book} %>
		 </div>
<div class="col-xs-9">
		<!-- clearfixは不要 -->
<div class="main">
<h1>Users</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
		</tr>
	</thead>

	<tbody>
<!--  変数bookを使ってtitle,bodyを以下で表示  -->
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag user, :profile_image, size: 50, fallback:"no_image.jpg"%>
 			</td>
			<td>
				<%= user.name %>
		    </td>
		    <td>
				<%= link_to "Show" ,user_path(user.id) %>
			</td>
			<td>
				 <% if current_user != user %>
        			<% if user.followed_by?(current_user) %>
            		<p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
        			<% else %>
            		<p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
        			<% end %>
    			<% end %>
    		</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>
</div>