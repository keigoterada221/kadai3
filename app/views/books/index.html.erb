<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
<!--  変数bookを使ってtitle,bodyを以下で表示  -->
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag book.user, :profile_image, :fill,60,60, fallback:"no_image.jpg" %>
 			</td>
			<td>
				<%= link_to book.title,book_path(book) %>
		    </td>
			<td>
				<%= book.body %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<!-- ここから新規投稿部分 -->
<h1>New book</h1>
<!-- form_for部分(@bookは=Book.new) -->
<%= form_for(@book) do |f| %>

<!-- render入れる -->


<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit "Create Book" %></br>

<% end %>